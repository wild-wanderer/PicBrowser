{
    "name": "Pic Browser",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [ 
                "*://*/*" 
            ],
            "js":  [ 
                "commons.js",
                "opener.js" 
            ],
            "css": [ 
                "opener.css" 
            ]
        },
        {
            "all_frames": true,
            "matches": [ "https://*.perchance.org/ai-girl-image-generator" ],
            "js": [ 
                "jquery-3.6.4.js",
                "AI/main.js"
            ],
            "css": [ 
                "AI/styles.css"
            ]
        },
        {
            "all_frames": true,
            "matches": [ "https://image-generation.perchance.org/*" ],
            "js": [ 
                "commons.js",
                "AI/imgFrame.js",
                "jquery-3.6.4.js"
            ]
        }
    ],
    "web_accessible_resources": [{
        "resources": [ "*" ],
        "matches": [ "*://*/*" ]
    }],
    "action": {
        "default_title": "Browse pictures",
        "default_icon": {
            "64": "img/icon.png"
        }
    },
    "background": {
        "service_worker": "action.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}